%section.main-section
  #signup{"background-image" => t('user.registration.background')}
    .content
      .row.photo-bg
        .small-12.small-centered.medium-11.medium-pull-1.large-7.large-pull-1.columns
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'translucent sign_up'} ) do |f|
            .row
              .small-12.columns
                %h3
                  Forgot your password?
                  %sup
                    Or you suddenly remember? Try to
                    %a#sign_in{:href => "#{new_user_session_path}"} sign back in
            .row
              .small-12.columns
                = f.input :email, class: 'transparent', autofocus: true, required: true, placeholder: 'Your Email', wrapper: false
                %label{:for => "user_email"} Emai
            .row
              .small-12.columns
                = f.submit "Send me reset password instructions", class: 'button primary'
