%section.main-section
  #tour-mega-step1-form-page
    #hero{ style: "background-image: url(#{asset_url('landscape.svg')}); background-size: cover; background-position: 50% 50%; background-repeat: no-repeat;" }
      .message
        .row
          .small-12.small-centered.medium-10.large-8.columns.text-center
            %h1.larger Craft your tour with Tourmega
            = link_to 'Right now', new_tour_path, method: :get, class: 'button ladda-button', 'data-style' => 'expand-right', 'data-color' => 'mint'
    .content
      .row.last-row-before-footer.short.content
        - if @tours.present?
          #tours
            = render 'tours', tours: @tours
        - else
          .small-12
            .panel.white-bg
              .media
                .media-body
                  %h2.h3
                    You have not crafted any tours
                  %p
                    If there is any problem, please contact with us via support@tourmega.com
